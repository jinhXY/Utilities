{
	"version": 8,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 30,
		"patch": 2
	},
	"configurePresets": [
		{
			"name": "Dev",
			"displayName": "dev",
			"description": "Build compiled with debug flags and sanitizers",
			"generator": "Unix Makefiles",
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"USE_CHECK": "ON",
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic -std=gnu17 -ggdb3 -fno-eliminate-unused-debug-symbols -fsanitize=address -fno-omit-frame-pointer -fsanitize=undefined -DCURRENT_FILE=THIS_FILENAME"
			}
		},
		{
			"name": "Dev - No sanitizer",
			"displayName": "dev-nsan",
			"description": "Build compiled with debug flags without sanitizers",
			"generator": "Unix Makefiles",
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"USE_CHECK": "ON",
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic -std=gnu17 -ggdb3 -fno-eliminate-unused-debug-symbols -DCURRENT_FILE=THIS_FILENAME"
			}
		},
		{
			"name": "Release",
			"displayName": "release",
			"description": "Build compiled with optimal flags and no debugging",
			"generator": "Unix Makefiles",
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"USE_CHECK": "ON",
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic -std=gnu17 -O3 -DCURRENT_FILE=THIS_FILENAME"
			}
		}
	]
}